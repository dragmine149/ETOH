{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "tower": {
      "type": "object",
      "properties": {
        "difficulty": {
          "type": "number",
          "description": "The difficult of the tower, gotten from wiki/in-game"
        },
        "badge_id": {
          "type": "integer",
          "description": "The badge id of the tower (for the new place)"
        },
        "old_id": {
          "type": "integer",
          "description": "The badge if of the tower (for the old place). Blank if doesn't exist"
        }
      },
      "required": [
        "difficulty",
        "badge_id"
      ]
    },
    "area_information": {
      "type": "object",
      "properties": {
        "sub_area": {
          "type": "string",
          "description": "Which area this area is a sub area of."
        },
        "requirements": {
          "type": "object",
          "description": "Requirements to access the area",
          "properties": {
            "tower_points": {
              "type": "number",
              "description": "The number of tower points required to access this area"
            },
            "tower_difficulties": {
              "type": "object",
              "description": "The number of towers required of each difficulty level to access this area",
              "properties": {
                "easy": {
                  "type": "integer"
                },
                "medium": {
                  "type": "integer"
                },
                "hard": {
                  "type": "integer"
                },
                "difficult": {
                  "type": "integer"
                },
                "challenging": {
                  "type": "integer"
                },
                "intense": {
                  "type": "integer"
                },
                "remorseless": {
                  "type": "integer"
                },
                "insane": {
                  "type": "integer"
                },
                "extreme": {
                  "type": "integer"
                },
                "terrifying": {
                  "type": "integer"
                },
                "catastrophic": {
                  "type": "integer"
                }
              }
            }
          },
          "required": [
            "tower_points",
            "tower_difficulties"
          ]
        }
      },
      "required": [
        "requirements"
      ]
    },
    "ring": {
      "type": "object",
      "properties": {
        "area_information": {
          "$ref": "#/definitions/area_information"
        }
      },
      "required": [
        "area_information"
      ],
      "additionalProperties": {
        "$ref": "#/definitions/tower"
      }
    },
    "zone": {
      "type": "object",
      "properties": {
        "area_information": {
          "$ref": "#/definitions/area_information"
        }
      },
      "required": [
        "area_information"
      ],
      "additionalProperties": {
        "$ref": "#/definitions/tower"
      }
    },
    "event": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/tower"
      }
    }
  },
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "rings": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ring"
          }
        },
        "zones": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/zone"
          }
        },
        "events": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/event"
          }
        }
      },
      "required": [
        "rings",
        "zones",
        "events"
      ]
    }
  },
  "required": [
    "data"
  ]
}
